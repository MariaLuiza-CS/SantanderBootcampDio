<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeErrorColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="errorIconTint">@color/text_input_box_stroke</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColorHint">@color/black</item>
        <item name="strokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


</resources>